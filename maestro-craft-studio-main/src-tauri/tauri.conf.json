{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Maestro Craft Studio",
  "version": "0.0.0",
  "identifier": "com.maestro.craft.studio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Maestro Craft Studio",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Education",
    "copyright": "Copyright Â© 2024",
    "shortDescription": "AI-Enhanced Flashcard & Learning App",
    "longDescription": "A modern flashcard application with AI-powered content generation and spaced repetition learning.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:maestro.db"]
    }
  }
}